{
  "name": "troevlodke-backend",
  "version": "0.0.1",
  "description": "project for moscow hackaton 2023",
  "author": "Niyaz Leushkin",
  "private": true,
  "license": "UNLICENSED",
  "prisma": {
    "seed": "ts-node prisma/seed/seed.ts"
  },
  "scripts": {
    "build": "nest build",
    "stage:compile:docker:amd64": "docker buildx build --platform linux/amd64 . -f ./docker/stage.Dockerfile -t niazlv/troevlodke-backend && docker push niazlv/troevlodke-backend",
    "stage:compile:docker:multi": "docker buildx build --platform linux/amd64,linux/arm64 . -f ./docker/stage.Dockerfile -t niazlv/troevlodke-backend && docker push niazlv/troevlodke-backend",
    "stage:compile:docker": "docker build . -f ./docker/stage.Dockerfile -t niazlv/troevlodke-backend",
    "init": "npm install && npm install --global yarn && npm i --global dotenv-cli",
    "db:test:up": "docker compose up -d postgres-test",
    "db:test:rm": "docker compose rm -f -s -v postgres-test",
    "db:test:seed": "dotenv -e env/test.env -- yarn prisma db seed",
    "migrate:test": "dotenv -e ./env/test.env -- yarn prisma migrate dev",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 10 && yarn migrate:test",
    "pretest:e2e": "yarn db:test:restart",
    "test:e2e": "dotenv -e ./env/test.env -- jest --all --watch --no-cache --config ./test/jest-e2e.json",
    "prepipeline-test:e2e": "dotenv -e ./env/pipeline-test.env -- prisma migrate dev",
    "pipeline-test:e2e": "dotenv -e ./env/pipeline-test.env -- jest --config ./test/jest-e2e.json",
    "db:dev:up": "docker compose up -d postgres-dev",
    "db:dev:rm": "docker compose rm -f -s -v postgres-dev",
    "db:dev:seed": "dotenv -e env/dev.env -- yarn prisma db seed",
    "start:dev": "dotenv -e ./env/dev.env -- nest start --watch",
    "migrate:dev": "dotenv -e ./env/dev.env -- yarn prisma migrate dev",
    "studio:dev": "dotenv -e ./env/dev.env -- yarn prisma studio",
    "init:dev": "yarn init && yarn db:dev:up && sleep 30 && yarn migrate:dev && yarn db:dev:seed && yarn start:dev",
    "db:stage:up": "docker compose up -d postgres-stage",
    "db:stage:rm": "docker compose rm -f -s -v postgres-stage",
    "db:stage:seed": "dotenv -e env/stage.env -- yarn prisma db seed",
    "start:stage": "dotenv -e ./env/stage.env -- node dist/src/main.js",
    "start:stage:docker": "node dist/src/main.js",
    "start:stage:nest": "dotenv -e ./env/stage.env -- nest start",
    "migrate:stage": "dotenv -e ./env/stage.env -- yarn prisma migrate deploy",
    "studio:stage": "dotenv -e ./env/stage.env -- yarn prisma studio -p 3001",
    "run:stage:docker": "yarn start:stage:docker",
    "run:stage": "sleep 10 && migrate:stage && yarn start:stage",
    "init:stage": "yarn init && yarn db:stage:up && sleep 30 && yarn migrate:stage && yarn db:stage:seed && yarn start:stage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "dependencies": {
    "@nestjs/common": "^9.4.1",
    "@nestjs/config": "^2.3.2",
    "@nestjs/core": "^9.4.1",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.1",
    "@nestjs/swagger": "^6.3.0",
    "@prisma/client": "^4.14.1",
    "argon2": "^0.30.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "exceljs": "^4.3.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^4.14.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^9.4.1",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
